{
    "extends": "airbnb-base",
    "env": {
        "node": true
    },
    "globals": {
        "document": false
    },
    "rules": {
        // According to ESLint docs, comments in JSON config-files is supported. (Not "package.json", only ESLint config files)
        // JSON spec. doesn't allow it, but apparently it's ok with ESLint's parser.
        // PRAISE BE!
        "no-console": "off",
        "semi": ["error", "never"],
        "comma-dangle": ["error", {"functions": "never"}],
        "quotes": ["error", "single", { "allowTemplateLiterals": true }],
        "no-invalid-this": "error",
        "no-restricted-syntax": "off",
        "no-unneeded-ternary": "off",
        "object-curly-newline": ["error", { "consistent": true }]
    }
}
