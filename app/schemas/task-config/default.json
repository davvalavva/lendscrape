{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "/schemas/task-config/default.json#",
  "type": "object",
  "required": [
    "name",
    "task",
    "targetURL",
    "documentSchema"
  ],
  "properties": {
    "name":           { "$ref": "defs.json#/definitions/name"           },
    "task":           { "$ref": "defs.json#/definitions/task"           },
    "disable":        { "$ref": "defs.json#/definitions/disable"        },
    "maxAttempts":    { "$ref": "defs.json#/definitions/maxAttempts"    },
    "targetURL":      { "$ref": "defs.json#/definitions/targetURL"      },
    "documentSchema": { "$ref": "defs.json#/definitions/documentSchema" },
    "fieldInject":    { "$ref": "defs.json#/definitions/fieldInject"    }
  }
}
